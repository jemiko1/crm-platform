# Test environment configuration
# Used by e2e tests -- points to a dedicated test database
# Create this database locally: CREATE DATABASE crm_test;

DATABASE_URL="postgresql://postgres:postgres@localhost:5432/crm_test"
JWT_SECRET="test-jwt-secret-do-not-use-in-production"
JWT_EXPIRES_IN="1h"

# Core Integration (disabled by default in test)
CORE_INTEGRATION_ENABLED="false"
CORE_WEBHOOK_SECRET="test-webhook-secret"

# Telephony / Call Center
TELEPHONY_INGEST_SECRET="test-telephony-secret"

# Client Chats
VIBER_BOT_TOKEN="test-viber-token"
FB_PAGE_ACCESS_TOKEN="test-fb-page-token"
FB_APP_SECRET="test-fb-app-secret"
FB_VERIFY_TOKEN="test-fb-verify-token"

